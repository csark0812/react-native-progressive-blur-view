{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "es2017"
        ],
        "allowSyntheticDefaultImports": true,
        "jsx": "react-native",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": [
            "react",
            "react-native"
        ]
    },
    "exclude": [
        "node_modules",
        "lib",
        "example"
    ]
}